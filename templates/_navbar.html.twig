<div class="container-fluid mb-3">
	<nav class="navbar navbar-expand-xl navbar-light bg-white">
		{% if app.user is not empty %}
			<a class="navbar-brand" href="/ijustcantgetenough">
				<img src="{{ asset('build/JadeEchardLogo.png')}}" alt="logo jade"class="logo-nav img-fluid d-inline-block align-text-top" />
			</a>
		{% else %}
			<a class="navbar-brand" href="/">
				<img src="{{ asset('build/JadeEchardLogo.png')}}" alt="logo jade"class="logo-nav img-fluid d-inline-block align-text-top" />
			</a>
		{% endif %}
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="projet nav-item">
					<a class="nav-link active" aria-current="page" href="/">{% trans %}PROJECTS{% endtrans %}</a>
					<div class="projetcategorie collapse navbar-collapse">
						<ul class="nav nav-projectCat">
							{% if categories is defined %}
								<li class="nav-item">
									<a class="nav-under nav" aria-current="page" href="/">
										{% if app.request.locale == 'fr' %}
											{% if app.request.requestUri == '/' %}
												<p style="font-weight: bold; color: #0000ff;">tous</p>
											{% else %}
												<p>tous</p>
											{% endif %}
										{% else %}
											{% if app.request.requestUri == '/' %}
												<p style="font-weight: bold; color: #0000ff;">all</p>
											{% else %}
												<p>all</p>
											{% endif %}
										{% endif %}
									</a>
								</li>
								{% for category in categories %}
								<li class="nav-item">
									<a class="nav-under nav" aria-current="page" href="{{ path('projects_by_cat', {categorySlug: category.slug}) }}">
										{% if app.request.locale == 'fr' %}
											{% if app.request.requestUri == '/projets/' ~ category.slug or (project is defined and app.request.requestUri == '/projet/' ~ project.slug and category == project.projectCategory) %}
												<p style="font-weight: bold; color: #0000ff;">{{ project.projectCategory.nameFr is defined ? project.projectCategory.nameFr : category.nameFr }}</p>
											{% else %}
												<p>{{ category.nameFr }}</p>
											{% endif %}
										{% else %}
											{% if app.request.requestUri == '/projects/' ~ category.slug or (project is defined and app.request.requestUri == '/project/' ~ project.slug and category == project.projectCategory) %}
												<p style="font-weight: bold; color: #0000ff;">{{ project.projectCategory.nameEn is defined ? project.projectCategory.nameEn : category.nameEn }}</p>
											{% else %}
												<p>{{ category.nameEn }}</p>
											{% endif %}
										{% endif %}
									</a>
								</li>
								{% endfor %}
							{% endif %}
						</ul>
					</div>
				</li>
				<li class="projet nav-item">
					<a class="nav-link" href="{{ path('news') }}">NEWS</a>
					<div class="projetcategorie collapse navbar-collapse">
						<ul class="nav nav-news">
							{% if newsCategories is defined %}
								<li class="nav-item">
									<a class="nav-under nav" aria-current="page" href="/news">
										{% if app.request.locale == 'fr' %}
											{% if app.request.requestUri == '/news' %}
												<p style="font-weight: bold; color: #0000ff;">tous</p>
											{% else %}
												<p>tous</p>
											{% endif %}
										{% else %}
											{% if app.request.requestUri == '/news' %}
												<p style="font-weight: bold; color: #0000ff;">all</p>
											{% else %}
												<p>all</p>
											{% endif %}
										{% endif %}
									</a>
								</li>
								{% for newsCategory in newsCategories %}
								<li class="nav-item">
									<a class="nav-under nav" aria-current="page" href="{{ path('news_by_cat', {newsCategorySlug: newsCategory.slug}) }}">
										{% if app.request.locale == 'fr' %}
											{% if app.request.requestUri == '/news/' ~ newsCategory.slug %}
												<p style="font-weight: bold; color: #0000ff;">{{ newsCategory.nameFr }}</p>
											{% else %}
												<p>{{ newsCategory.nameFr }}</p>
											{% endif %}
										{% else %}
											{% if app.request.requestUri == '/news/' ~ newsCategory.slug %}
												<p style="font-weight: bold; color: #0000ff;">{{ newsCategory.nameEn }}</p>
											{% else %}
												<p>{{ newsCategory.nameEn }}</p>
											{% endif %}
										{% endif %}
									</a>
								</li>
								{% endfor %}
							{% endif %}
						</ul>
					</div>
				</li>
				<li class="projet nav-item">
					<a class="nav-link" href="{{ path('about_me') }}">{% trans %}ABOUT{% endtrans %}</a>
				</li>
				<li class="projet nav-item">
					<a class="nav-link" href="{{ path('press') }}">{% trans %}PRESS{% endtrans %}</a>
				</li>
				<li class="projet nav-item">
					<a class="nav-link" href="{{ path('contact') }}">CONTACT</a>
				</li>
				<li id="swich-language">
					<div class="swichLanguage projet nav-item">
						{% for locale in locales %}
						{% if locale != app.request.locale %}
						<a href="{{ path('change_locale', { 'locale' : locale })}}"
							class="btn-translate btn btn-outline-dark">{{locale|upper}}</a>
						{% endif %}
						{% endfor %}
					</div>
					<div class="socialnav">
						<a class="linkedIn text-reset text-decoration-none" href="https://www.linkedin.com/in/jade-echard/" target="_blank"><img src="{{ asset('build/linkedin.png')}}" alt="linkedIn" id="linkedin"/></a>
						<a class="insta text-reset text-decoration-none" href="https://www.instagram.com/jade.echard/?hl=fr" target="_blank"><img src="{{ asset('build/instagram.png')}}" alt="instagram" id="instagram"/></a>
					</div>
				</li>
			</ul>
		</div>
	</nav>
</div>
